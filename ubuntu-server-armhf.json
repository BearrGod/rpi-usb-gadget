{
	"builders": [
		{
			"type": "arm",
			"file_urls": [
				"https://cdimage.ubuntu.com/releases/22.04/release/ubuntu-22.04-preinstalled-server-armhf+raspi.img.xz"
			],
			"file_checksum_url": "https://cdimage.ubuntu.com/releases/22.04/release/ubuntu-22.04-preinstalled-server-armhf+raspi.img.xz.sha256",
			"file_checksum_type": "sha256",
			"file_target_extension": "xz",
			"file_unarchive_cmd": [
				"xz",
				"--decompress",
				"$ARCHIVE_PATH"
			],
			"image_build_method": "reuse",
			"image_path": "ubuntu-server-armhf-22.04-armhf.img",
			"image_size": "2G",
			"image_type": "dos",
			"image_partitions": [
				{
					"name": "boot",
					"type": "c",
					"start_sector": "8192",
					"filesystem": "vfat",
					"size": "256M",
					"mountpoint": "/boot"
				},
				{
					"name": "root",
					"type": "83",
					"start_sector": "532480",
					"filesystem": "ext4",
					"size": "0",
					"mountpoint": "/"
				}
			],
			"image_chroot_env": [
				"PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
			],
			"qemu_binary_source_path": "/usr/bin/qemu-arm-static",
			"qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"sudo apt update",
				"sudo apt install -y dnsmasq"
			]
		},
		{
			"type": "file",
			"source": "sources//etc/dnsmasq.d/usb0",
			"destination": "/etc/dnsmasq.d/usb0"
		},
		{
			"type": "file",
			"source": "sources//etc/netplan/20-rpi-gadget.yaml",
			"destination": "/etc/netplan/20-rpi-gadget.yaml"
		},
		{
			"type": "shell",
			"inline": [
				"echo 'dtoverlay=dwc2,dr_mode=peripheral' \u003e\u003e /boot/firmware/config.txt",
				"sed -i 's/rootwait/modules-load=dwc2,g_ether rootwait/' /boot/firmware/cmdline.txt",
				"netplan apply",
				"sed -i 's/#DNSMASQ_EXCEPT/DNSMASQ_EXCEPT/' /etc/default/dnsmasq "
			]
		}
	]
}